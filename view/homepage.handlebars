<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flex Flow Workout Manager</title>
    <!-- Include Tailwind CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
    <!-- Include Handlebars from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.7/dist/handlebars.min.js"></script>
</head>
<body class="w-full h-screen" style="background-image: url('assets/flexing lady bg.svg'); background-size: cover; background-position: center;"> 

    
      <!-- Navigation -->
       <nav class="shadow-md flex justify-between items-center py-1 px-6">
        <img src="/assets/transparent flex flow logo for login page.png" alt="Flex Flow Workout Manager" class="h-12">
        <!-- Dynamic navigation buttons -->
        <button id="Dropdown" data-dropdown-toggle="dropdown" class="place-self-end text-white animate-bounce bg-gradient-to-r from-blue-600 to-black hover:from-black hover:to-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-800 font-medium rounded-lg text-base top-0 px-12 mr-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
            <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
            </svg>
        </button>
        <!-- Dropdown content -->
        <div id="dropdown" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
            <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
                {{#each navLinks}}
                    <li>
                        <a href="{{this.link}}" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">{{this.text}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </nav>
    <!-- Handlebars Template for Buttons -->
    <script id="buttons-template" type="text/x-handlebars-template">
        {{#each buttons}}
            <div class="items-left">
                <div class="relative">
                    <button type="submit" id="{{id}}" class="transition ml-8 text-3xl font-medium text-white w-1/3 bg-gradient-to-r from-black to-{{color}} hover:from-gray-400 hover:to-{{hoverColor}} h-24 block whitespace-nowrap text-center py-4 rounded-full border drop-shadow-lg border-gray-600">
                        {{text}}
                    </button>
                </div>
            </div>
        {{/each}}
    </script>

    <!-- Dynamic Content will be injected here -->
    <div class="container mx-auto space-y-10 grid grid-cols-1 mt-20" id="buttonContainer">
        <!-- Buttons generated by Handlebars will appear here -->
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const data = {
                buttons: [
                    {id: "workouts", text: "My Workouts", color: "blue-600", hoverColor: "blue-700"},
                    {id: "diets", text: "My Diets", color: "blue-600", hoverColor: "blue-700"},
                    {id: "methods", text: "Workout Methods", color: "blue-600", hoverColor: "blue-700"},
                    {id: "suggestions", text: "Diet Suggestions", color: "blue-600", hoverColor: "blue-700"}
                ]
            };

            const templateScript = Handlebars.compile(document.getElementById("buttons-template").innerHTML);
            const html = templateScript(data);
            document.getElementById("buttonContainer").innerHTML = html;
        });
    </script>

    <script src="/js/homepage.js"></script>
</body>
</html>

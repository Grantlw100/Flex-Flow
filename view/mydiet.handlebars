<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diet Plans</title>
    <!-- Include Tailwind CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
    <!-- Include Handlebars from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.7/dist/handlebars.min.js"></script>
</head>
<body class="w-full h-screen" style="background-image: url('assets/background image for login page.svg'); background-size: cover; background-position: center;">

       <!-- Navigation -->
       <nav class="shadow-md flex justify-between items-center py-1 px-6">
        <img src="/assets/transparent flex flow logo for login page.png" alt="Flex Flow Workout Manager" class="h-12">
        <!-- Dynamic navigation buttons -->
        <button id="Dropdown" data-dropdown-toggle="dropdown" class="place-self-end text-white animate-bounce bg-gradient-to-r from-blue-600 to-black hover:from-black hover:to-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-800 font-medium rounded-lg text-base top-0 px-12 mr-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
            <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
            </svg>
        </button>
        <!-- Dropdown content -->
        <div id="dropdown" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
            <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
                {{#each navLinks}}
                    <li>
                        <a href="{{this.link}}" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">{{this.text}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </nav>

    <!-- Main Container for Diet Plan Creation and Listing -->
    <div class="container mx-auto p-4 text-center">
        <!-- Diet Plan Creation Form -->
        <div class="my-2">
            <h2 class="text-4xl font-semibold text-gray-800">Create Your Diet Plan</h2>
            <form id="dietPlanForm" class="container px-96 space-y-4 mt-4">
                <div>
                    <input type="text" id="mealName" class="form-input hover:bg-gray-100 focus:bg-white border px-4 py-2 rounded w-full" placeholder="Meal Name">
                </div>
                <div>
                    <textarea id="mealDescription" class="form-input hover:bg-gray-100 focus:bg-white border px-4 py-2 rounded w-full" placeholder="Meal Description"></textarea>
                    <p class="text-gray-700 mt-3">Click calendar and clock icons.
                    </p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <input type="date" id="mealDate" class="form-input border px-4 py-2 col-start-2 rounded w-full" placeholder="Select Date">
                    <input type="time" id="mealTime" class="form-input border px-4 py-2 col-start-3 rounded w-full" placeholder="Select Time">
                </div>
                <button type="submit" class="bg-gradient-to-r from-black to-blue-600 text-white px-6 py-2 rounded hover:from-blue-600 hover:to-black w-60">Add Meal</button>
            </form>
        </div>

        <!-- Diet Plans Listing -->
        <div class="my-8">
            <h2 class="text-4xl font-semibold text-gray-800">Scheduled Diet Plans</h2>
            <ul id="dietPlansList" class="mt-4">
                <!-- Handlebars Template for Diet Plans -->
                <script id="diet-plan-template" type="text/x-handlebars-template">
                    {{#each this}}
                    <li class="mb-4">
                        <h3 class="text-xl font-semibold">{{mealName}} - {{mealDate}} at {{mealTime}}</h3>
                        <p>{{mealDescription}}</p>
                    </li>
                    {{else}}
                    <p>No scheduled meals yet.</p>
                    {{/each}}
                </script>
            </ul>
        </div>
    </div>

    <!-- Placeholder for your JavaScript file that will handle the logic -->
    <script src="/js/mydiet.js"></script>
</body>
</html>

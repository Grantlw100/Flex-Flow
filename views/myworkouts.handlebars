<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workout Scheduler and Progress Tracker</title>
    <!-- Include Tailwind CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="w-full h-screen" style="background-image: url('assets/background image for login page.svg'); background-size: cover; background-position: center;">

       <!-- Navigation -->
       <nav class="shadow-md flex justify-between items-center py-1 px-6">
        <img src="/assets/transparent flex flow logo for login page.png" alt="Flex Flow Workout Manager" class="h-12">
        <!-- Dynamic navigation buttons -->
       <button id="Dropdown" data-dropdown-toggle="dropdown" class="place-self-end text-white  bg-gradient-to-r from-blue-600 hover:from-gray-400 hover:to-blue-700 to-black  focus:outline-none font-medium rounded-lg text-base top-0 px-12 mb-3 mr-5 py-2.5 text-center inline-flex items-center dark:focus:ring-blue-800" type="button">
    <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
    </svg>
</button>

    </nav>
<div id="dropdown" class="absolute mr-2 mb-2 right-0 z-10 hidden font-semibold bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
    <ul class="py-2 text-sm text-black dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
        <li>
            <a href="/homepage" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Homepage</a>
        </li>
        <li>
            <a href="/notifications" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Notifications</a>
        </li>
        <li>
            <a href="/login" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Logout</a>
        </li>
    </ul>
</div>


    <!-- Main Container -->
    <div class="container justify-center mx-auto p-4">
        <!-- Workout Scheduler -->
        <div class="my-2 text-center ">
            <h2 class="text-4xl font-semibold text-gray-800">Schedule Your Workouts</h2>
            <p class="text-gray-600 mt-2">Click calender and clock icons.</p>
            <form class="form scheduleForm" class="grid gap-x-4 container px-96 justify-center grid-cols-6 ">
                <div class="form-group">
                <input type="date" class="form-input border  mt-2  col-start-2 col-span-2 px-9 py-3 rounded" placeholder="Select Date">
                <input type="time" class="form-input border mt-2  col-start-4 col-span-2 px-9 py-3 rounded" placeholder="Select Time">
                <input type="text" class="form-input border col-start-2 col-span-4 mt-2  hover:bg-gray-200 focus:bg-white px-5 py-3 rounded" placeholder="Enter Your Workout">
                <button type="submit" class="bg-blue-700  hover:from-black hover:to-blue-800 mt-2 col-start-3 col-span-2 py-3 justify-center text-white px-6 rounded ">Schedule Workout</button>
                </div>
            </form>
        </div>

        <!-- Progress Tracker -->
        <div class="my-8 text-center">
            <h2 class="text-4xl font-semibold text-gray-800">Track Your Progress</h2>
            <div id="progressTracker" class="mt-4">
                <!-- Dynamic content: Charts or tables to display progress can be added here -->
                <p class="text-gray-600">Your progress charts will appear here (implement with JS and charting library).</p>
            </div>
        </div>

         <!-- Scheduled Workouts List -->
    <div class="grid grid-cols-4 my-8 text-center">
        <h2 class="text-4xl col-span-4 font-semibold text-gray-800">Scheduled Workouts</h2>
        <div id="scheduledWorkoutsList" class="mt-4">
            {{#each scheduledWorkouts}}
                <div class="text-black col-span-2 border">
                    <div>Workout: {{this.workout}}</div>
                    <div>Date: {{this.date}}</div>
                    <div>Time: {{this.time}}</div>
          <button class="delete-btn px-4 py-2 bg-red-500 text-white rounded">Delete</button>
                </div>
            {{else}}
                <li class=" absolute left-1 right-1 text-center text-gray-600">No scheduled workouts yet.</li>
            {{/each}}
        </div>
    </div>

<script>
    // Wait for the DOM to be fully loaded
    document.addEventListener('DOMContentLoaded', function() {
        // Get the button and the dropdown menu
        const dropdownButton = document.getElementById('Dropdown');
        const dropdownMenu = document.getElementById('dropdown');

        // Add click event listener to the button
        dropdownButton.addEventListener('click', function() {
            // Toggle the 'hidden' class on the dropdown menu
            dropdownMenu.classList.toggle('hidden');
        });
    });
</script>

    <script src="/js/myworkouts.js"></script>
</body>
</html>

   

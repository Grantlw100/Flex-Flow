


  <h1>My Notifications</h1>

<div>
<form id="notificationForm">
    <section>
      <h2> Notify me about:</h2>
      <!-- Editable field for the title -->
      <input type="text" id="titleInput" placeholder="Enter title here" required />
    </section>

    <section>
      <h2>My notification:</h2>
      <!-- Editable field for the message -->
      <textarea id="messageInput" rows="4" cols="50" placeholder="Enter message here"></textarea>
    </section>

    <section>
      <h2>Notification setting</h2>
        <input type ='checkbox' id="onReopen">On Page Re-open</input>
        <input type ='checkbox' id="specificDay">Specific Day</input>
        <input type ='checkbox' id="specificDate">Specific Date</input>
    </section>

    <section>
      <select id="dayOfWeek" style="display: none;">
        <option value="">Select a day...</option> 
        <option value="Sunday">Sunday</option>
        <option value="Monday">Monday</option>
        <option value="Tuesday">Tuesday</option>
        <option value="Wednesday">Wednesday</option> 
        <option value="Thursday">Thursday</option>
        <option value="Friday">Friday</option>
        <option value="Saturday">Saturday</option>
      </select>
    </section>
    

    <section>
      <input type="date" id="CalendarDate" style="display: none;" placeholder="Specific Date (YYYY-MM-DD)"/>
    </section>

    <section>
    <h2>Notification type:</h2>
    <select id="colorSelector">
      <option value="default">Default</option>
      <option value="red">Red</option>
      <option value="green">Green</option>
      <option value="blue">Blue</option>
      <!-- Add more color options here -->
    </select>
  </section>

  <section>
    <h2>Notification Icon:</h2>
    <select id="iconSelector">
      <option value="defaultIcon">Default</option>
      <option value="icon1">Icon 1</option>
      <option value="icon2">Icon 2</option>
      <!-- Add more icon options here -->
    </select>
  </section>
</form>
<button type="button" onclick="saveFormData()">Save Notification</button>

</div>

<div id="notifications-container">
<div id="notifications-container">

<script id="notification-template" type="text/x-handlebars-template">
  {{#each notifications}}
  <div class="notification">
    <h3>{{title}}</h3>
    <p>{{message}}</p>
    <p>Type: {{notificationType}}</p>
    {{#if dayOfWeek}}
      <p>Day of Week: {{dayOfWeek}}</p>
    {{/if}}
    {{#if specificDate}}
      <p>Specific Date: {{specificDate}}</p>
    {{/if}}
    <p>Notification Icon: {{notificationIcon}}</p>
    <p>Notification Color: {{notificationColor}}</p>
    <button class="update-btn" data-id="{{id}}">Update</button>
    <button class="delete-btn" data-id="{{id}}">Delete</button>
  </div>
{{else}}
  <p>No notifications found.</p>
{{/each}}

</script>


</div>




  <h1>My Notifications</h1>

<div>
<form id="notificationForm">
    <section>
      <h2> Notify me about:</h2>
      <!-- Editable field for the title -->
      <input type="text" id="titleInput" placeholder="Enter title here" maxlength="20" required />
    </section>

    <section>
      <h2>My notification:</h2>
      <!-- Editable field for the message -->
      <textarea id="messageInput" rows="4" cols="50" placeholder="Enter message here"></textarea>
    </section>

    <section>
      <h2>Notification setting</h2>
        <input type ='checkbox' id="onReopen">On Page Re-open</input>
        <input type ='checkbox' id="specificDay">Specific Day</input>
        <input type ='checkbox' id="specificDate">Specific Date</input>
    </section>

    <section>
      <select id="dayOfWeek" style="display: none;">
        <option value="">Select a day...</option> 
        <option value="Sunday">Sunday</option>
        <option value="Monday">Monday</option>
        <option value="Tuesday">Tuesday</option>
        <option value="Wednesday">Wednesday</option> 
        <option value="Thursday">Thursday</option>
        <option value="Friday">Friday</option>
        <option value="Saturday">Saturday</option>
      </select>
    </section>
    

    <section>
      <input type="date" id="CalendarDate" style="display: none;" placeholder="Specific Date (YYYY-MM-DD)"/>
    </section>

    <section>
    <h2>Notification Color:</h2>
    <select id="colorSelector">
      <option value="gray">Gray</option>
      <option value="red">Red</option>
      <option value="orange">Orange</option>
      <option value="green">Green</option>
      <option value="blue">Blue</option>
      <!-- Add more color options here -->
    </select>
  </section>

  <section>
    <h2>Notification Icon:</h2>
    <select id="iconSelector">
      <option value="/assets/Dumbbell.png">Dumbbell</option>
      <option value="/assets/sammich.png">Sandwich</option>
      <option value="/assets/water.png">Water Bottle</option>
      <option value="/assets/stretch.png">Stretch</option>
      <option value="/assets/music.png">Music</option>
      <!-- Add more icon options here -->
    </select>
  </section>
</form>
<button type="button" onclick="saveFormData()">Save Notification</button>

</div>

<div id="notifications-container">



 {{#each notifications}}
          <div class="notification" data-id="{{this.id}}">
            <h3 class="title-display">{{this.title}}</h3>
            <input type="text" class="title-input" value="{{this.title}}" style="display: none;">
            
            <p class="message-display">{{this.message}}</p>
            <textarea class="message-input" style="display: none;">{{this.message}}</textarea>
            <div></div>
            <p>Type: {{this.notificationType}}</p>
            {{#if this.dayOfWeek}}
              <p>Day of Week: {{this.dayOfWeek}}</p>
            {{/if}}
            {{#if this.specificDate}}
              <p>Specific Date: {{this.specificDate}}</p>
            {{/if}}
            <p>Notification Icon: {{this.notificationIcon}}</p>
            <p>Notification Color: {{this.notificationColor}}</p>
            <button class="edit-btn">Edit</button>
            <button class="save-btn" style="display: none;">Save</button>
            <button class="delete-btn" data-id="{{this.id}}">Delete</button>
          </div>
        {{else}}
          <p>No notifications found.</p>
        {{/each}}


</div>

<button class="btn" onclick="notifier.success('This is an example of tip')">Try me</button>



